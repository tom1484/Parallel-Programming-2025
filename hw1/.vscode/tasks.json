{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake: configure-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build/Debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Configure CMake project with Debug build type"
        },
        {
            "label": "cmake: configure-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build/Release",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Configure CMake project with Release build type"
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "cmake: configure-debug",
            "detail": "Build hw1 with debug symbols using CMake"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "cmake: configure-release",
            "detail": "Build hw1 with optimizations using CMake"
        },
        {
            "label": "clean-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/Debug",
                "--target", "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Clean Debug build artifacts using CMake"
        },
        {
            "label": "clean-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/Release",
                "--target", "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Clean Release build artifacts using CMake"
        },
        {
            "label": "rebuild-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/Debug",
                "--clean-first"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "cmake: configure-debug",
            "detail": "Clean and rebuild hw1 Debug using CMake"
        },
        {
            "label": "rebuild-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/Release",
                "--clean-first"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "cmake: configure-release",
            "detail": "Clean and rebuild hw1 Release using CMake"
